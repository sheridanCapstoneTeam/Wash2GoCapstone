<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/permissionFragment"
        android:name="project.sheridancollege.wash2goproject.ui.permission.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission" >
        <action
            android:id="@+id/action_permissionFragment_to_mapsFragment"
            app:destination="@id/mapsFragment"
            app:popUpTo="@id/permissionFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument android:name="longitude"
            app:argType="float" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="project.sheridancollege.wash2goproject.ui.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <argument
            android:name="latitude"
            app:argType="float" />
        <argument android:name="longitude"
            app:argType="float" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="project.sheridancollege.wash2goproject.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_coreFragment"
            app:destination="@id/coreFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/coreFragment"
        android:name="project.sheridancollege.wash2goproject.ui.core.CoreFragment"
        tools:layout="@layout/core_fragment"
        android:label="CoreFragment" >
        <action
            android:id="@+id/action_coreFragment_to_permissionFragment"
            app:destination="@id/permissionFragment" />
    </fragment>

</navigation>